<h1><%= @sub.title %></h1>
<p><%= @sub.description %></p>

<ul class="votable clearfix">
  <% @sub.posts.each do |post| %>
    <li class="clearfix">
      <div class="vote_container">
       <form action="<%= upvote_post_url(post) %>" method="post">
         <%= form_auth %>
         <button>^</button>
       </form>
       <p><%= post.score %></p>
       <form action="<%= downvote_post_url(post) %>" method="post">
         <%= form_auth %>
         <button>v</button>
       </form>
     </div>
      <p><a href="<%= post_url(post) %>"><%= post.title %></a>
      <% if current_user == post.author %>
         - <a href="<%= edit_post_url(post) %>">edit</a>
      <% end %>
      </p>
      <p>by <%= post.author.email %>; <a href="<%= post_url(post) %>/#comments"><%= post.comments.count %> comments</a></p>
    </li>
  <% end %>
</ul>
<a href="<%= new_post_url %>?sub_id=<%= @sub.id %>">New Post</a>

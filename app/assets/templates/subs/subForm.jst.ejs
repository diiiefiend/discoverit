<h1><%= creating ? "Create" : "Edit" %> a Sub</h1>
<form>
  <label for="title">Title</label>
  <input type="text" id="title" value="<%= sub.escape("title") %>" name="sub[title]">
  <label for="description">Description</label>
  <input type="text" id="description" value="<%= sub.escape("description") %>" name="sub[description]">
  <input type="submit" value="Submit">
</form>

<% if(!creating){ %>
  <hr>
  <h1>Delete Sub</h1>
  <p>If you are sure you want to delete the sub and all the posts and comments, click the button below.
    Be sure though! They will be lost forever!</p>

  <form>
    <input type="submit" class="delete-sub" value="Delete Sub">
  </form>
<% }; %>
